# Use Node.js base image
FROM node:22-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm install

# Copy app source
COPY . .

# Build production bundle
RUN npm run build

# Serve built files with a lightweight server
RUN npm install -g serve

EXPOSE 10000
CMD ["serve", "-s", "dist", "-l", "10000"]
